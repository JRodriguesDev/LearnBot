{
    "compilerOptions": {
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "strict": true,

        "target": "esnext",
        "module": "nodenext",
        "moduleResolution": "nodenext",

        "rootDir": "./src",
        "outDir": "./build",

        "paths": {
            "#interfaces": ["./src/interfaces/index.ts"],
            "#prisma": ["./src/utils/prisma/index.ts"],
            "#user_controller": ["./src/db/controllers/user.ts"],
            "#wallet_controller": ["./src/db/controllers/wallet.ts"]
        }

    },
    "include": ["src", "wallet.tsss"],
    "exclude": ["node_modules"]
}